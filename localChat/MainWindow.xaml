<Window x:Class="localChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:localChat"
        mc:Ignorable="d"
        Title="Registration" Height="150" Width="300">
    <Grid Margin="0,10,0,0" Height="224" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="292*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="3,15,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.508,-0.569" Grid.ColumnSpan="2"/>
        <Button Content="Connect" Grid.Column="1" HorizontalAlignment="Left" Margin="65,62,0,0" VerticalAlignment="Top" Width="115" Height="23" Grid.ColumnSpan="2" Click="btnConnectClick"/>
        <TextBox x:Name="nameInput" Grid.Column="1" HorizontalAlignment="Left" Margin="34,20,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
